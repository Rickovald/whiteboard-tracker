{
  "name": "whiteboard-tracker",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "host",
    "svs/drawer"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:drawer\"",
    "dev:frontend": "cd host && npm run dev",
    "dev:drawer": "cd svs/drawer && npm run dev",
    "build": "npm run build:frontend && npm run build:drawer",
    "build:frontend": "cd host && npm run build",
    "build:drawer": "cd svs/drawer && npm run build",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:drawer\"",
    "start:frontend": "cd host && npm run preview",
    "start:drawer": "cd svs/drawer && npm run start",
    "postinstall": "cd svs/drawer && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}